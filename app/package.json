{
  "name": "app-desktop",
  "description": "Console UI experience for desktop",
  "version": "1.0.0",
  "main": "src/electron.js",
  "license": "MIT",
  "scripts": {
    "build": "webpack --mode=production --node-env=production",
    "watch": "webpack --watch",
    "serve": "webpack serve",
    "start": "yarn electron ./src/electron.js",
    "format": "prettier -c -w ./src",
    "link-types": "cd src && ln -s ../../@types",
    "unlink-types": "rm src/@types",
    "start-app": "electron-forge start",
    "make-linux": "yarn unlink-types && electron-forge make -p linux",
    "make-win": "yarn unlink-types && electron-forge make -p win32"
  },
  "dependencies": {
    "app-db": "file:../app-db",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.14.1",
    "styled-components": "6.0.8",
    "stylis": "4.3.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.4.2",
    "@electron-forge/maker-deb": "6.4.2",
    "@electron-forge/maker-squirrel": "6.4.2",
    "@electron-forge/maker-zip": "6.4.2",
    "@trivago/prettier-plugin-sort-imports": "4.2.0",
    "@types/node": "^20.8.3",
    "@types/react": "18.0.12",
    "@types/react-dom": "18.0.5",
    "@types/styled-components": "5.1.27",
    "electron": "25.2.0",
    "electron-reload": "2.0.0-alpha.1",
    "html-webpack-plugin": "5.5.0",
    "prettier": "2.7.0",
    "react-icons": "4.8.0",
    "ts-loader": "9.3.0",
    "tsconfig-paths-webpack-plugin": "4.0.0",
    "typescript": "5.0.4",
    "webpack": "5.73.0",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "4.9.2"
  },
  "config": {
    "forge": {
      "makers": [
        {
          "name": "@electron-forge/maker-zip"
        },
        {
          "name": "@electron-forge/maker-deb"
        }
      ]
    }
  }
}
